        "type": "inject",
        "z": "energy-overview-example-flow",
        "name": "Solar Production",
        "props": [
            {
                "p": "payload"
            }
        ],
        "repeat": "",
        "crontab": "",
        "once": false,
        "onceDelay": 0.1,
        "topic": "",
        "payload": "{\"routes\":{\"solarToInverter\":true,\"inverterToHome\":true},\"labels\":{\"solar\":{\"value\":\"3.2 kW\",\"sublabel\":\"Producing\"},\"home\":{\"value\":\"1.5 kW\",\"sublabel\":\"Consuming\"}}}",
